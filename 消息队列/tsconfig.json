{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "declaration": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        // "noResolve": true,
        "removeComments": true,
        "strictNullChecks": false,
        "inlineSourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dist/common",
        "rootDir": "src",
        "skipLibCheck": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES2015.promise",
            "ES2018.promise",
            "ES2015.iterable"
        ]
    }
}